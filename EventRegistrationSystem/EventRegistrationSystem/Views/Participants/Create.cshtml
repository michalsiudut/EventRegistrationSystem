@model List<ParticipantModel>

@{
    var isFilterActive = !string.IsNullOrEmpty(Context.Request.Query["eventId"]);
    string clearFilterButtonClass = "btn btn-outline-secondary";
    if (!isFilterActive)
    {
         clearFilterButtonClass = "btn btn-outline-secondary";
    }
    else
    {
         clearFilterButtonClass = "btn btn-success";
    }
}

<div class="container">
    <div class="row pt-4 align-items-center">
        <div class="col-md-6 mb-2">
            <a class="btn btn-primary" asp-controller="Participants" asp-action="CreateAParticipant">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square-fill" viewBox="0 0 16 16">
                    <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0" />
                </svg> Add new person
            </a>
        </div>

        <div class="col-md-6 mb-2 d-flex justify-content-end">
            <form asp-controller="Participants" asp-action="ListByEvent" method="get" class="d-flex me-2">
                <input type="number" name="eventId" class="form-control me-2" placeholder="Enter Event ID" />
                <button type="submit" class="btn btn-outline-secondary">Filter by Event</button>
            </form>

            <form asp-controller="Participants" asp-action="Create" method="get" class="d-flex">
                <button type="submit" class="@clearFilterButtonClass">Clear Filter</button>
            </form>
        </div>
    </div>
</div>



<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>EventID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Id</td>
                    <td>@entry.Name</td>
                    <td>@entry.Email</td>
                    <td>@entry.EventID</td>
                </tr>
            }
        </tbody>
    </table>



